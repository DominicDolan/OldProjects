@model IEnumerable<FoodFetch.Models.MyOrdersData>
@{
    ViewBag.Title = "MyOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>My Orders</h2>
    @foreach (var orderData in Model)
    {
        <h3>Order From @orderData.restaurantName</h3>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in orderData.myOrderItems)
                {
                    <tr class="cursor-pointer">

                        <td>@item.name</td>
                        <td>@item.quantity</td>
                        <td>&euro;@item.price</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr class="cursor-pointer">

                    <td></td>
                    <td><strong>Total</strong></td>
                    <td>&euro;@orderData.totalPrice</td>
                </tr>
            </tfoot>

        </table>
    }
</div>

